{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch NestJS App (start:dev)",
        "runtimeExecutable": "sh",
        "runtimeArgs": [
          "-c",
          "source .env && npm run start:dev"
        ],
        "skipFiles": [
            "/**"
        ],
        "console": "integratedTerminal",
        "restart": true
      }
    ]
  }