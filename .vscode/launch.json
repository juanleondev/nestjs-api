{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch NestJS App (start:dev)",
        "runtimeExecutable": "sh",
        "runtimeArgs": [
          "-c",
          "cd ${workspaceFolder}/locl_api && npm run clean-dev && npm run start:dev"
        ],
        "skipFiles": [
            "/**"
        ],
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch NestJS App (debug mode)",
        "program": "${workspaceFolder}/locl_api/dist/main.js",
        "cwd": "${workspaceFolder}/locl_api",
        "env": {
          "PORT": "3000"
        },
        "envFile": "${workspaceFolder}/locl_api/.env",
        "skipFiles": [
            "/**"
        ],
        "console": "integratedTerminal",
        "restart": true,
        "preLaunchTask": "build"
      }
    ]
  }